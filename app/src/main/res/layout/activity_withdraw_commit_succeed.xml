<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBg"
    android:orientation="vertical"
    tools:context="com.xygj.app.jinrirong.activity.product.WithdrawCommitSucceedActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingTop="@dimen/status_bar_size">

        <ImageView
            android:layout_width="@dimen/toolbar_size"
            android:layout_height="@dimen/toolbar_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="finishPage"
            android:scaleType="center"
            android:src="@drawable/ic_back_black"
            android:tint="@android:color/white"
            tools:ignore="OnClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_size"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="提现"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </FrameLayout>

    <View
        style="@style/SplitLine"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="14dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_withdraw_done" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="提现申请已提交"
            android:textColor="@color/colorDarkGray"
            android:textSize="16sp" />
    </LinearLayout>

    <View style="@style/SplitLine" />

    <View
        style="@style/SplitLine"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <TextView
                android:id="@+id/tv_account_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行卡"
                android:textColor="@color/colorDarkGray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_account_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="建行尾号"
                android:textColor="@color/colorDarkGray"
                android:textSize="14sp" />
        </FrameLayout>

        <View style="@style/SplitLine" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额"
                android:textColor="@color/colorDarkGray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_withdraw_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="5.00元"
                android:textColor="@color/colorDarkGray"
                android:textSize="14sp" />
        </FrameLayout>

    </LinearLayout>

    <View style="@style/SplitLine" />

    <Button
        android:id="@+id/btn_done"
        style="?borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="14dp"
        android:background="@drawable/bg_btn_login"
        android:text="完成"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>
