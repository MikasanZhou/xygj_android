<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical"
    tools:context=".jinrirong.activity.user.MemberInfoActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingTop="@dimen/status_bar_size">

        <ImageView
            android:layout_width="@dimen/toolbar_size"
            android:layout_height="@dimen/toolbar_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="finishPage"
            android:scaleType="center"
            android:src="@drawable/ic_back_black"
            tools:ignore="OnClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_size"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="基本信息"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </FrameLayout>

    <View style="@style/SplitLine" />


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <View style="@style/SplitLine" />

            <FrameLayout
                android:id="@+id/fl_change_avatar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingEnd="14dp"
                android:paddingStart="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="头像"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <com.xygj.app.common.widget.RoundImageView
                    android:id="@+id/iv_head_img"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center_vertical|end" />

                <View
                    style="@style/SplitLine"
                    android:layout_gravity="bottom" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingEnd="14dp"
                android:paddingStart="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="真实姓名"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_true_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:background="@null"
                    android:gravity="end"
                    android:inputType="text"
                    android:lines="1"
                    android:text="未设置"
                    android:textColor="@color/colorLightGray"
                    android:textSize="14sp" />

                <View
                    style="@style/SplitLine"
                    android:layout_gravity="bottom" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingEnd="14dp"
                android:paddingStart="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="身份证号"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_id_card_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:background="@null"
                    android:gravity="end"
                    android:hint="请填写身份证号码"
                    android:inputType="text"
                    android:lines="1"
                    android:textColor="@color/colorLightGray"
                    android:textSize="14sp" />

                <View
                    style="@style/SplitLine"
                    android:layout_gravity="bottom" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingEnd="14dp"
                android:paddingStart="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="手机号"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_phone_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:text="未设置"
                    android:textColor="@color/colorLightGray"
                    android:textSize="14sp" />

                <View
                    style="@style/SplitLine"
                    android:layout_gravity="bottom" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingEnd="14dp"
                android:paddingStart="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="推荐码"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_recommend_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:text="未设置"
                    android:textColor="@color/colorLightGray"
                    android:textSize="14sp" />

                <View
                    style="@style/SplitLine"
                    android:layout_gravity="bottom" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingEnd="14dp"
                android:paddingStart="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="推荐人"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_recommend_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:text="未设置"
                    android:textColor="@color/colorLightGray"
                    android:textSize="14sp" />

                <View
                    style="@style/SplitLine"
                    android:layout_gravity="bottom" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_identity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingEnd="14dp"
                android:paddingStart="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="身份"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:text="未设置"
                    android:textColor="@color/colorLightGray"
                    android:textSize="14sp" />

                <View
                    style="@style/SplitLine"
                    android:layout_gravity="bottom" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_has_credit_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingEnd="14dp"
                android:paddingStart="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="有无信用卡"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_has_credit_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:text="未设置"
                    android:textColor="@color/colorLightGray"
                    android:textSize="14sp" />

                <View
                    style="@style/SplitLine"
                    android:layout_gravity="bottom" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_phone_use_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingEnd="14dp"
                android:paddingStart="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="手机使用时长"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_phone_use_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:text="未设置"
                    android:textColor="@color/colorLightGray"
                    android:textSize="14sp" />
            </FrameLayout>

            <View style="@style/SplitLine" />

            <Button
                android:id="@+id/btn_save"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_btn_login"
                android:text="保存"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
